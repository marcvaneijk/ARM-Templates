{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "names": {
            "type": "object",
            "metadata": {
                "description": "Names object from master template"
            }
        },
        "config": {
            "type": "object",
            "metadata": {
                "description": "Config object from master template"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('names').nsg]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "rule1",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('names').lbPubIp]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[resourceGroup().location]",
            "apiVersion": "2020-05-01",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat('a',uniqueString(resourceGroup().id))]"
                }
            }
        },
        {
            "name": "[parameters('names').vNet]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[parameters('names').nsg]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('config').addressPrefix]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('names').subnetMaster]",
                        "properties": {
                            "addressPrefix": "[parameters('config').master.subnetPrefix]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('names').nsg)]"
                            }
                        }
                    }
                ]
            }
        }   
    ],
    "outputs": {
    }
}