{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VMs"
            },
            "defaultValue": "vmadmin"
        },
        "sshPublicKey": {
            "type": "securestring",
            "metadata": {
                "description": "The public key of the SSH keypair"
            }
        },
        "prefix": {
            "type": "string",
            "defaultValue": "pre",
            "maxLength": 5,
            "metadata": {
                "description": "resource name prefix"
            }
        },
        "newOrExistingVnet": {
            "type": "string",
            "defaultValue": "new",
            "allowedValues": [
                "new",
                "existing"
            ],
            "metadata": {
                "description": "Create a new vnet or use an existing vNet?"
            }
        },
        "existingVnetResourceGroupName": {
            "type": "string",
            "defaultValue":"only required if existing vnet is select",
            "metadata": {
                "description": "Name of the resourceGroup for the existing virtual network to deploy into."
            }
        },
        "existingVnetName": {
            "type": "string",
            "defaultValue":"only required if existing vnet is select",
            "metadata": {
                "description": "vName of the existing virtual network to deploy into."
            }
        },
        "existingSubnetName": {
            "type": "string",
            "defaultValue":"only required if existing vnet is select",
            "metadata": {
                "description": "Name of the existing subnet to deploy into."
            }
        },
        "fixedIpAddresses": {
            "type": "array",
            "metadata": {
                "description": "Specify the three fixed IP addresses you want to use for the resources"
            },
            "defaultValue": [
                "10.0.0.10",
                "10.0.0.11",
                "10.0.0.12"
            ],
            "minLength": 3,
            "maxLength": 3
        },
        "artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/marcvaneijk/arm-templates/main/01-linux-single-vm/",
            "metadata": {
                "description": "Location of templates, scripts and other artifacts"
            }
        }
    },
    "variables": {
        "names": {
            "vNet": "[toLower(concat(parameters('prefix'), '-vnet'))]",
            "subnet": "[toLower(concat(parameters('prefix'), '-subnet'))]",
            "nsg": "[toLower(concat(parameters('prefix'), '-nsg'))]",
            "pubIp": "[toLower(concat(parameters('prefix'), 'pubip'))]",
            "vmMaster": "[toLower(concat(parameters('prefix'), '-master'))]",
            "vmNode": "[toLower(concat(parameters('prefix'), '-node'))]"
        },
        "credentials": {
            "adminUsername": "[parameters('adminUsername')]",
            "sshPublicKey": "[parameters('sshPublicKey')]",
            "guid": "[replace(guid(resourceGroup().id),'-','')]"
        },
        "config": {
            "artifactsLocation": "[parameters('artifactsLocation')]",
            "addressPrefix": "10.0.0.0/16",
            "subnetPrefix": "10.0.1.0/24",
            "master": {
                "size": "Standard_F2s_v2",
                "ip": "10.0.1.11"
            },
            "node": {
                "size": "Standard_F2s_v2"
            }
        }
    },
    "resources": [
        {
            "condition": "[equals(parameters('newOrExistingVnet'),'new')]",
            "name": "network-new",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('artifactsLocation'),'linked/network.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "names": {
                        "value": "[variables('names')]"
                    },
                    "config": {
                        "value": "[variables('config')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('newOrExistingVnet'),'existing')]",
            "name": "network-existing",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('artifactsLocation'),'linked/existing.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "names": {
                        "value": "[variables('names')]"
                    },
                    "credentials": {
                        "value": "[variables('credentials')]"
                    },
                    "config": {
                        "value": "[variables('config')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}